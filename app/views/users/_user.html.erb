<li>
  <%= gravatar_for user, size: 50%>
  <%= link_to user.name, user %>
  <% if current_user.admin? && current_user != user%>
    | <%= button_to 'delete', user, method: :delete, 
                                    confirm: "Are you sure?", class: "btn btn-danger", style: "width: 10vw; margin-top:5px"%>
  <% end %>
</li>
